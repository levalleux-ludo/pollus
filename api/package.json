        "ts-jest": "^22.0.1",
        "ts-node": "^3.2.0",
        "tslint": "^5.0.0",
        "tslint-config-prettier": "^1.1.0",
        "typescript": "^2.3.0"
    },
    "engines": {
        "node": ">=6.0.0"
    },
    "jest": {
        "transform": {
            ".(ts)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "testEnvironment": "node"
    }
